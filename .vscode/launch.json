  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Django",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}\\manage.py",
      "python": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
      "args": ["runserver"],
      "django": true,
      "justMyCode": true
    },
    {
      "name": "Django LAN Debugger",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}\\manage.py",
      "python": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
      "args": ["runserver", "0.0.0.0:80", "--settings=IFC.settings_LAN"],
      "django": true,
      "justMyCode": true
    }
  ]
}